<Window x:Class="OrganizadorArquivosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="One Engenharia LTDA – Organizador de Arquivos"
        Width="900" Height="600"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Background="#F2F2F2">

    <!-- ────────── RECURSOS ────────── -->
    <Window.Resources>

        <!-- Cartão branco com sombra -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background"   Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding"      Value="25"/>
            <Setter Property="Margin"       Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.28" BlurRadius="20"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox com borda inferior -->
        <Style x:Key="BottomBorderTextBox" TargetType="TextBox">
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="BorderBrush"     Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding"         Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Template base para botões -->
        <ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="5"
                    Padding="{TemplateBinding Padding}">
                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>

        <!-- Botões -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Template"       Value="{StaticResource RoundedButtonTemplate}"/>
            <Setter Property="Background"     Value="#007ACC"/>
            <Setter Property="Foreground"     Value="White"/>
            <Setter Property="Padding"        Value="10,6"/>
            <Setter Property="FontWeight"     Value="Bold"/>
            <Setter Property="Cursor"         Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E81123"/>
        </Style>

        <Style x:Key="DevButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#D3D3D3"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

    </Window.Resources>

    <!-- ────────── LAYOUT ────────── -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Lateral azul -->
        <StackPanel Grid.Row="0" Grid.Column="0" Background="#007ACC" Grid.RowSpan="2">
            <Image Source="logo.png" Height="130" Margin="0,60,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Suporte: suporte@oneengenharia.com"
                       Foreground="White" TextWrapping="Wrap" Margin="10"/>

            <!-- Botão Procurar Atualização -->
            <Button x:Name="BtnCheckUpdate"
                    Content="Procurar Atualização"
                    Margin="10,0"
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnCheckUpdate_Click"/>

            <TextBlock Text="© 2025 ONE Engenharia"
                       Foreground="White" Margin="10"/>
        </StackPanel>

        <!-- Conteúdo principal (Config + Log) -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="220"/>
            </Grid.RowDefinitions>

            <!-- Card Config -->
            <ScrollViewer Grid.Row="0" Padding="20"
                          VerticalScrollBarVisibility="Auto">
                <Border Style="{StaticResource CardStyle}" Margin="20,0,20,20">
                    <StackPanel>

                        <TextBlock Text="Pasta de Origem:" FontWeight="Bold"/>
                        <DockPanel Margin="0,6,0,0">
                            <TextBox x:Name="TxtPasta"
                                     Style="{StaticResource BottomBorderTextBox}"
                                     IsReadOnly="True"
                                     MinWidth="320"/>
                            <Button Content="Selecionar"
                                    Width="110"
                                    Margin="8,0,0,0"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="BtnSelecionar_Click"
                                    DockPanel.Dock="Right"/>
                        </DockPanel>

                        <!-- Linha de campos -->
                        <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                            <StackPanel Margin="0,0,24,0">
                                <TextBlock Text="Nº OS:" FontWeight="Bold"/>
                                <TextBox x:Name="TxtOS"
                                         Style="{StaticResource BottomBorderTextBox}"
                                         MinWidth="210"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,24,0">
                                <TextBlock Text="UF:" FontWeight="Bold"/>
                                <ComboBox x:Name="CmbUF" MinWidth="90" SelectedIndex="0">
                                    <ComboBoxItem Content="MT"/>
                                    <ComboBoxItem Content="AC"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Sistema:" FontWeight="Bold"/>
                                <ComboBox x:Name="CmbSistema" MinWidth="135" SelectedIndex="0">
                                    <ComboBoxItem Content="Intelbras"/>
                                    <ComboBoxItem Content="Hoppecker"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>

                        <!-- Barra de progresso -->
                        <ProgressBar x:Name="Progress"
                                     IsIndeterminate="True"
                                     Visibility="Collapsed"
                                     Height="22"
                                     Margin="0,24,0,0"/>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!-- Card Log -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="40,0,40,10">
                <StackPanel>
                    <TextBlock Text="Log de Operações:" FontWeight="Bold"/>
                    <DataGrid x:Name="GridLog"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              MinHeight="150"
                              Margin="0,10,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Hora" Width="90"
                                                Binding="{Binding Hora, StringFormat=HH:mm:ss}"/>
                            <DataGridTextColumn Header="Tipo" Width="90"
                                                Binding="{Binding Tipo}"/>
                            <DataGridTextColumn Header="Mensagem" Width="*"
                                                Binding="{Binding Mensagem}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Rodapé -->
        <DockPanel Grid.Row="1" Grid.Column="1" Margin="20" LastChildFill="False">

            <!-- Versão -->
            <TextBlock x:Name="LblVersao"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       FontStyle="Italic"/>

            <!-- Botões -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button x:Name="BtnExportar"
                        Content="Exportar Log"
                        Width="110"
                        Margin="0,0,18,0"
                        Style="{StaticResource DevButton}"
                        Click="BtnExportar_Click"/>

                <Button x:Name="BtnProcessar"
                        Content="Processar"
                        Width="130"
                        Margin="0,0,18,0"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnProcessar_Click"/>

                <Button x:Name="BtnDesfazer"
                        Content="Desfazer"
                        Width="130"
                        Margin="0,0,18,0"
                        Style="{StaticResource DangerButton}"
                        Click="BtnDesfazer_Click"
                        Visibility="Collapsed"/>

                <Button x:Name="BtnDev"
                        Content="Dev"
                        Width="85"
                        Style="{StaticResource DevButton}"
                        Click="BtnDev_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
